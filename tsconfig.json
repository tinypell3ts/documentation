{
	"compilerOptions": {
		// Enable latest features
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		},
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "preserve",
		"allowJs": true,
		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		// Some stricter flags (disabled by default)
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,
		"incremental": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"mdx-components.js",
		"src/app/page.mdx",
		"src/app/content/_meta.js",
		"src/app/technical/define/page.mdx",
		"src/app/use-cases/page.mdx"
	],
	"exclude": ["node_modules"]
}
